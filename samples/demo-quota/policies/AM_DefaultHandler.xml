<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="AM_DefaultHandler">
    <DisplayName>AM_DefaultHandler</DisplayName>
    <Properties/>
    <Set>
        <Payload contentType="application/json">\{"error": 
            \{"message":"Default Fault Handling: ",
             "detail":"{fault.name}"}} </Payload>
        <StatusCode>400</StatusCode>
        <ReasonPhrase>Bad Request</ReasonPhrase>
    </Set>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="false" transport="http" type="response"/>
</AssignMessage>